[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <animation-charging> <label-charging>

format-discharging = <ramp-capacity> <label-discharging>

format-full-prefix = "Óà∫ "
format-full-prefix-foreground = ${colors.green}

ramp-capacity-0 = Óà∂
ramp-capacity-1 = Óà∑
ramp-capacity-2 = Óà∏
ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 = Óà∂
animation-charging-1 = Óà∑
animation-charging-2 = Óà∏
animation-charging-foreground = ${colors.orange}
animation-charging-framerate = 750

[module/temperature]
type = internal/temperature
thermal-zone = 1
warn-temperature = 60

hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input

format = <ramp> <label>

format-warn = <ramp> <label-warn>

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.alert}

ramp-0 = ÓÉâ
ramp-1 = ÓÉä
ramp-2 = ÓÉã
ramp-foreground = ${colors.foreground-alt}

[module/get-openvpn-status]
type = custom/script
exec = ~/.config/polybar/scripts/get-openvpn-status.sh
interval = 1

format-prefix = "ÓÇ™ VPN: "
format-prefix-foreground = ${colors.foreground-alt}
label = %output%


[module/get-openvpn-status-minimal]
